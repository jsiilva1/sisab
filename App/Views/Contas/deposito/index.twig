{% extends "pagePrototype.twig" %}

{% block title %}Efetuar um depósito | SISAB{% endblock %}

{% block body %}

    {% include "partials/header.twig" %}

    <div class="container">

        <h2 class="h2-heading">Efetuar um depósito</h2>

        <div class="card">

            <div class="card-header">Registrar uma operação de depósito</div>

            <div class="card-body">

                <form class="needs-validation" novalidate method="GET" action="{{ path }}contas/operacao">

                    <div class="form-group row">
                        <label for="selectContas" class="col-sm-2 col-form-label">Número da conta</label>
                        <div class="col-sm-10">
                            <select name="conta" class="form-control custom-select" id="selectContas" required>
                                <option selected>Selecione a conta...</option>
                                {% for conta in contas %}
                                    <option value="{{ conta.id }}">{{ conta.numero }} de {{ conta.nome_agencia }}</option>
                                {% endfor %}
                            </select>
                        </div>
                    </div>

                    <div class="form-group row">
                        <label for="inputValor" class="col-sm-2 col-form-label">Valor</label>
                        <div class="col-sm-10">
                            <input type="number" class="form-control" name="valor" id="inputValor" placeholder="Valor do depósito" required>
                        </div>
                        <div class="valid-feedback">
                            Parece bom!
                        </div>
                        <div class="invalid-feedback">
                            Digite um número válido
                        </div>
                    </div>

                    <input type="hidden" name="operacao" value="deposito">

                    <div class="form-group row">
                        <div class="col-sm-10">
                            <button class="btn btn-primary" type="submit">Efetuar operação</button>
                        </div>
                    </div>

                </form>

                {% if notification.newMessage == true and notification.state == true %}
                        <div class="alert alert-{{ notification.flashAlert }}" role="alert">
                            {{ notification.flashMessage }}

                            {% if notification.flashAlert == 'success' and tipo != 'operacao' %}
                                <a href="{{ path }}contas/listar">Mostrar</a>
                            {% endif %}

                            {% if notification.flashAlert == 'success' and tipo == 'operacao' and operacao == 'deposito' %}
                                <a href="{{ path }}contas/extrato/{{ id_conta }}">Ver extrato</a>
                            {% endif %}
                        </div>
                    <script>
                        setTimeout("document.location = '{{ path }}contas/deposito' ", 2750);
                    </script>
                {% endif %}

            </div> <!--card-body-->

        </div> <!--card-->

    </div>

{% endblock %}

